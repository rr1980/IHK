@{
    Layout = "_LayoutWait";
    ViewData["Title"] = "Wait Page";
}
@model  IHK.ViewModels.WaitViewModel

<div id="wait_content" class="container">
    @*<button type="button" data-bind="click: sendMsg" id="sendButton" class="btn btn-default btn-sm">SEND</button>*@
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading"><span data-bind="text: mubBlock.description"></span></div>
                <div class="panel-body">
                    <div class="col-md-12">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center" width="25%">Position</th>
                                    <th width="40%">Name</th>
                                    <th width="35%">Telefon</th>
                                </tr>
                            </thead>
                            <tbody data-bind="foreach: mubBlock.waits">
                                <tr>
                                    <td width="25%" class="text-center" data-bind="text: (position()==0?'bearbeitet...':position())"></td>
                                    <td width="40%"  data-bind="text: (name()+', '+vorname())"></td>
                                    <td width="35%"  data-bind="text: telefon"></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                </div>
            </div>
        </div>
       


</div>
<script>
    connect("mub");
    var viewmodel = new ViewModels.WaitViewData(@Html.Raw(Json.Serialize(Model)));
    ko.applyBindings(viewmodel, document.getElementById('wait_content'));
</script>