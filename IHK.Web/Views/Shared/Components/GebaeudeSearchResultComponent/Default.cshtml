@*@model  IHK.ViewModels.*@

<div class="col-md-12">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th></th>
                <th width="10%" class="text-center">Etagen</th>
                <th width="10%" class="text-center">Gaerten</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: gebaeude">
            <tr>
                <th>
                    <button type="button" class="btn btn-default btn-xs" data-bind="click: $parent.onClickResult">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </th>
                <td width="50%" class="text-center" data-bind="text: etagen"></td>
                <td width="50%" class="text-center" data-bind="text: gaerten"></td>
            </tr>
        </tbody>
    </table>
</div>