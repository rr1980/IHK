@*@model  IHK.ViewModels.*@
@*@using IHK.Common
    @using IHK.Services*@
@*@inject  AccountService _accountService*@

<div id="mieter_content" class="tab-pane fade">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading clearfix">
                    <div class="row">
                        <div class="col-md-8">
                            <h5 class="control-label">Suche Mieter...</h5>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="col-md-12">

                        <div class="input-group">
                            <input class="form-control" placeholder="Suchwörter..." type="text" data-bind="value: searchText, returnAction: onSearch">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>

    var viewmodel = new ViewModels.MieterViewData(@Html.Raw(Json.Serialize(Model)));
    ko.applyBindings(viewmodel, document.getElementById('mieter_content'));

</script>