@*@model  IHK.ViewModels.*@

<div class="col-md-12">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th></th>
                <th width="15%" class="text-center">Plz</th>
                <th width="35%" class="text-center">Stadt</th>
                <th width="35%" class="text-center">Strasse</th>
                <th width="15%" class="text-center">HausNr</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: adressen">
            <tr>
                <th>
                    <button type="button" class="btn btn-default btn-xs" data-bind="click: $parent.onClickResult">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </th>
                <td width="15%" class="text-center" data-bind="text: postleitzahl"></td>
                <td width="35%" class="text-center" data-bind="text: stadt"></td>
                <td width="35%" class="text-center" data-bind="text: strasse"></td>
                <td width="15%" class="text-center" data-bind="text: hausnummer"></td>
            </tr>
        </tbody>
    </table>
</div>