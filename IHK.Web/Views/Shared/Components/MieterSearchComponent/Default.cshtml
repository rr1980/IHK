@*@model  IHK.ViewModels.*@
@*@using IHK.Common
    @using IHK.Services*@
@*@inject  AccountService _accountService*@

<div id="mieterSearch_content" class="tab-pane fade">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading clearfix">
                    <div class="row">
                        <div class="col-md-8">
                            <h5 class="control-label">Suche Mieter...</h5>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="col-md-12">
                        <div class="input-group">
                            <input class="form-control" placeholder="Suchwörter..." type="text" data-bind="value: searchText, returnAction: onSearch">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading clearfix">
                    <div class="row">
                        <div class="col-md-8">
                            <h5 class="control-label">Resultate</h5>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="col-md-12">
                       <table class="table table-striped table-hover">
                           <thead>
                               <tr>
                                   <th></th>
                                   <th width="5%" class="text-center">Anrede</th>
                                   <th width="10%" class="text-center">Name</th>
                                   <th width="10%" class="text-center">Vorname</th>
                                   <th width="10%" class="text-center">Telefon</th>
                                   <th width="15%" class="text-center">WbsNr</th>
                                   <th width="5%" class="text-center">WohnNr</th>
                                   <th width="5%" class="text-center">Plz</th>
                                   <th width="15%" class="text-center">Stadt</th>
                                   <th width="15%" class="text-center">Strasse</th>
                                   <th width="5%" class="text-center">HausNr</th>
                               </tr>
                           </thead>
                           <tbody data-bind="foreach: mieter">
                               <tr>
                                   <th>
                                       <button type="button" class="btn btn-default btn-xs" data-bind="click: $parent.onClickResult">
                                           <span class="glyphicon glyphicon-search"></span>
                                       </button>
                                   </th>
                                   <td width="5%" class="text-center" data-bind="text: (anrede()==0?'Herr':'Frau')"></td>
                                   <td width="10%" class="text-center" data-bind="text: name"></td>
                                   <td width="10%" class="text-center" data-bind="text: vorname"></td>
                                   <td width="10%" class="text-center" data-bind="text: telefon"></td>
                                   <td width="15%" class="text-center" data-bind="text: wbsNummer"></td>
                                   <td width="5%" class="text-center" data-bind="text: wohnungsnummer"></td>
                                   <td width="5%" class="text-center" data-bind="text: postleitzahl"></td>
                                   <td width="15%" class="text-center" data-bind="text: stadt"></td>
                                   <td width="15%" class="text-center" data-bind="text: strasse"></td>
                                   <td width="5%" class="text-center" data-bind="text: hausnummer"></td>
                               </tr>
                           </tbody>
                       </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var viewmodel = new ViewModels.MieterSearchViewData(@Html.Raw(Json.Serialize(Model)));
    ko.applyBindings(viewmodel, document.getElementById('mieterSearch_content'));
</script>