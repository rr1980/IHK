@*@model  IHK.ViewModels.*@

<div class="col-md-12">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th></th>
                <th width="5%" class="text-center">Anrede</th>
                <th width="10%" class="text-center">Name</th>
                <th width="10%" class="text-center">Vorname</th>
                <th width="10%" class="text-center">Telefon</th>
                <th width="15%" class="text-center">WbsNr</th>
                <th width="5%" class="text-center">WohnNr</th>
                <th width="5%" class="text-center">Plz</th>
                <th width="15%" class="text-center">Stadt</th>
                <th width="15%" class="text-center">Strasse</th>
                <th width="5%" class="text-center">HausNr</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: mieter">
            <tr>
                <th>
                    <button type="button" class="btn btn-default btn-xs" data-bind="click: $parent.onClickResult">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </th>
                <td width="5%" class="text-center" data-bind="text: (anrede()==0?'Herr':'Frau')"></td>
                <td width="10%" class="text-center" data-bind="text: name"></td>
                <td width="10%" class="text-center" data-bind="text: vorname"></td>
                <td width="10%" class="text-center" data-bind="text: telefon"></td>
                <td width="15%" class="text-center" data-bind="text: wbsNummer"></td>
                <td width="5%" class="text-center" data-bind="text: wohnung.wohnungsnummer"></td>
                <td width="5%" class="text-center" data-bind="text: wohnung.gebaeude.adresse.postleitzahl"></td>
                <td width="15%" class="text-center" data-bind="text: wohnung.gebaeude.adresse.stadt"></td>
                <td width="15%" class="text-center" data-bind="text: wohnung.gebaeude.adresse.strasse"></td>
                <td width="5%" class="text-center" data-bind="text: wohnung.gebaeude.adresse.hausnummer"></td>
            </tr>
        </tbody>
    </table>
</div>